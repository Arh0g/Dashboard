<!DOCTYPE html>
<html lang="en" style="height: 100%; margin: 0;">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js" integrity="sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU=" crossorigin="anonymous"></script>    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.17.11/lodash.core.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.17.11/lodash.fp.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.17.11/lodash.min.js"></script>
    <script type="text/javascript" src='https://cdnjs.cloudflare.com/ajax/libs/gridstack.js/0.4.0/gridstack.min.js'></script>
    <script type="text/javascript" src='https://cdnjs.cloudflare.com/ajax/libs/gridstack.js/0.4.0/gridstack.jQueryUI.min.js'></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/gridstack.js/0.4.0/gridstack.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/7823975bd6.js" crossorigin="anonymous"></script>   
    <link rel="stylesheet" type="text/css" href="style.css" />
    <title>Dashboard</title>
</head>
<body>
    <div class="wrapper">

        <!-- Sidebar -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3 id="dashboardToggle">Dashboard</h3>
            </div>
            <ul class="list-unstyled components">
                <li>
                    <a href="/dashboard"><i class="fas fa-home"></i> Home</a>
                </li>
                <li>
                    <a href="/profile"><i class="fas fa-user-alt"></i> Profile</a>
                </li>
            </ul>
            <ul class="list-unstyled components">
                <!--Weather-->
                <li>
                    <a href="#" id="weatherButton" ><i class="fas fa-cloud-sun"></i> Get Weather</a>
                </li>
                <!--Youtube-->
                <li>
                    <a href="#" id="youtubeButton"><i class="fab fa-youtube"></i> Get Youtube</a>
                </li>
                <!--Steam-->
                <li>
                    <a href="#" id="steamButton"><i class="fab fa-steam"></i> Get Steam</a>
                </li>
            </ul>
            <ul class="list-unstyled components">
                <li>
                    <a href="/users/logout"><span class="fas fa-sign-out-alt"></span> Logout</a>
                </li>
            </ul>
        </nav>
    
        <!-- Page Content -->
        <div id="mainContent">
            <div class="container-fluid">
                <!--JS Script to Toggle the Button-->
                <button type="button" id="sidebarCollapse" class="btn btn-info" style="display: none;">
                    <i class="fas fa-align-left"></i>
                </button>
                <script>
                    $(document).ready(function () {
                        $('#dashboardToggle').on('click', function () {
                            $('#sidebar').toggleClass('active');
                            $('#sidebarCollapse').show();
                        });
                        $('#sidebarCollapse').on('click', function() {
                            $('#sidebar').toggleClass('active')
                            $('#sidebarCollapse').hide()
                        })
                    });
                </script>
                <!-- Real Content -->
                <div class="grid-stack">
                    <script>
                        //Load Widgets
                        function loadAllWidgets() {
                            var xhr = new XMLHttpRequest()
                            xhr.open("GET", "/loadWidget", true)
                            xhr.onreadystatechange = function() {
                                if (xhr.readyState == 4 && xhr.status == 200) {
                                    var widgets = JSON.parse(xhr.responseText)
                                    for (var i = 0; i < widgets.length; i++) {
                                        //Youtube Widget Creation
                                        if (widgets[i].widgetName == "youtube") {
                                            if (widgets[i].widgetRole == "loadVideo") {
                                                createYoutubeWidget(widgets[i].widgetContent)
                                            } else if (widgets[i].widgetRole == "getVideoViews") {
                                                createYoutubeWidgetForView(widgets[i].widgetContent)
                                            } else if (widgets[i].widgetRole == "getVideoLikesDislikes") {
                                                createYoutubeWidgetForLikesDislikes(widgets[i].widgetContent)
                                            }
                                        //Weather Widget Creation
                                        } else if (widgets[i].widgetName == "weather") {
                                            if (widgets[i].widgetRole == "getWeatherByCity") {
                                                createWeatherWidget(widgets[i].widgetContent)
                                            }
                                        }
                                    }
                                }
                            }
                            xhr.send()
                        }
                        loadAllWidgets()
                    </script>
                </div>

                <script type="text/javascript">
                    $(function () {
                        var options = {
                            cellHeight: 80,
                            verticalMargin: 10
                        };
                        $('.grid-stack').gridstack(options);
                    });
                </script>
                </div>
            </div>

            <!-- Edit Division -->
            <div class="editClass" id="editClass">
                <button id="closeEditWindow">x</button>
                <form action="/editWidget" method="POST">
                    <h2><strong>Change your value</strong></h2>
                    </br>
                    <input type="hidden" name="toChange" id="toChange" value="">
                    <input type="text" name="newValue" placeholder="Change value" required>
                    </br>
                    <input type="submit">
                </form>
            </div>
            <script>
                //Launch Edit Window
                function editWidget(item) {
                    $('#editClass').show()
                    $('#mainContent').fadeTo("slow", 0.4)
                    var toChangeInput = document.getElementById('toChange')
                    toChangeInput.value = item
                }
                //Close Edit Window
                $(document).ready(function() {
                    $('#closeEditWindow').on('click', function() {
                        $('#editClass').hide()
                        $('#mainContent').fadeTo("slow", 1)
                    })
                })
            </script>

            <!--Weather Division-->
            <div class="hiddenClass">
                <div class="weatherClass" id="weatherClass">
                    <h1><strong>Weather Widget</strong></h1>
                    <button id="removeWindowWeatherButton">X</button>
                    <form action="/saveWidget" method="POST">
                        <label for="cityWeather">Name of your city -> </label>
                        <input type="text" placeholder="City" name="widgetContent" id="cityWeather" required>
                        <input type="hidden" name="widgetName" value="weather">
                        <input type="hidden" name="widgetRole" value="getWeatherByCity">
                        <input type="submit" id="submit" value="Create">
                    </form>
                    <!--Close Window Function-->
                    <script type="text/javascript">
                        $(document).ready(function() {
                            $('#weatherButton').on('click', function() {
                                $('#weatherClass').show()
                                $('#mainContent').fadeTo("slow", 0.4)
                            })
                            $('#removeWindowWeatherButton').on('click', function() {
                                $('#weatherClass').hide()
                                $('#mainContent').fadeTo("slow", 1)
                            })
                        })
                    </script>
                    <!--Weather Widget Creation-->
                    <script type="text/javascript">
                        function createWeatherWidget(cityWeather) {
                            /*Get Data*/
                            var key = '48eb9b6228b51e3445b97cb1640729a1'
                            var city = cityWeather
                            fetch("https://api.openweathermap.org/data/2.5/weather?q=" + city + "&appid=" + key)
                            .then(function(resp) {
                                return resp.json()
                            })
                            .then(function(data) {
                                var country = data.sys.country
                                var temp =  Math.round(parseFloat(data.main.temp)-273.15);
                                var desc = data.weather[0].description
                                var first = '<h1>' + '<strong>' + city + ', ' + country + '</strong>' + '</h1>'
                                var second = '<h2><i class="fas fa-thermometer-half"></i> ' + temp + ' °, ' + desc +'</h2>'
                                /*Create Widget*/
                                this.grid = $('.grid-stack').data('gridstack')
                                var node = {
                                    x: 3,
                                    y: 3,
                                    width: 4,
                                    height: 2
                                }
                                var elementId = 'id="' + cityWeather + '"'
                                var valueID = 'value="' + cityWeather + '"'
                                var button = '<form action="/deleteWidget" method="POST"><input type="hidden" name="toRemove" ' + valueID + '></input><button class="trashButton" type="submit"></button></form>'
                                var createElement = '<div class="grid-stack-item" ' + elementId + ' style="background-color: powderblue; margin: 10px; border-radius: 10px;" ><i style="position: absolute; top: 3px; right: 4px" class="fas fa-cloud-sun"></i><button id="editButton" class="editButton" onclick="editWidget(this.parentNode.id)"></button><div class="grid-stack-item-content" style="padding: 20px; text-align: center">' + button + first + second + '</div></div>'
                                this.grid.addWidget($(createElement), node.x, node.y, node.width, node.height)
                                })
                            .catch(function() {
                                return false
                            })
                        }
                    </script>
                </div>
            </div>
            <!--Youtube Division-->
            <div class="hiddenClass">
                <div class="youtubeClass" id="youtubeClass">
                    <h1><strong>Youtube Widget</strong></h1>
                    <button id="removeWindowYoutubeButton">X</button>
                    <form action="/saveWidget" method="POST">
                        <label for="">Load video by id -> </label>
                        <input type="hidden" name="widgetName" value="youtube">
                        <input type="hidden" name="widgetRole" value="loadVideo">
                        <input type="text" placeholder="Ex : PeLBnv-PUck" name="widgetContent" id="videoId" required>
                        <input type="submit" value="Create">
                    </form>
                    <form action="/saveWidget" method="POST">
                        <label for="">Get video views by id -> </label>
                        <input type="hidden" name="widgetName" value="youtube">
                        <input type="hidden" name="widgetRole" value="getVideoViews">
                        <input type="text" placeholder="Ex : PeLBnv-PUck" name="widgetContent" id="videoId" required>
                        <input type="submit" value="Create">
                    </form>
                    <form action="/saveWidget" method="POST">
                        <label for="">Get video likes & dislikes by id -> </label>
                        <input type="hidden" name="widgetName" value="youtube">
                        <input type="hidden" name="widgetRole" value="getVideoLikesDislikes">
                        <input type="text" placeholder="Ex : PeLBnv-PUck" name="widgetContent" id="videoId" required>
                        <input type="submit" value="Create">
                    </form>
                    <!--Close Window Function-->
                    <script type="text/javascript">
                        $(document).ready(function() {
                            $('#youtubeButton').on('click', function() {
                                $('#youtubeClass').show()
                                $('#mainContent').fadeTo("slow", 0.4)
                            })
                            $('#removeWindowYoutubeButton').on('click', function() {
                                $('#youtubeClass').hide()
                                $('#mainContent').fadeTo("slow", 1)
                            })
                        })
                    </script>
                    <!--Weather Widget Creation-->
                    <script type="text/javascript">
                        function createYoutubeWidget(videoId) {
                            /*Get Data*/
                            var first = '<h1><strong>' + videoId + '</strong></h1>'
                            var iframe = '<iframe style="margin-bottom: 10px; border: 1px solid red; border-radius: 5px" width="100%" height="100%" src="https://www.youtube.com/embed/' + videoId + '"></iframe>'
                            /*Create Widget*/
                            this.grid = $('.grid-stack').data('gridstack')
                            var node = {
                                x: 3,
                                y: 3,
                                width: 5,
                                height: 4,
                            }
                            var elementId = 'id="' + videoId + '"'
                            var valueID = 'value="' + videoId + '"'
                            var button = '<form action="/deleteWidget" method="POST"><input type="hidden" name="toRemove" ' + valueID + '></input><button type="submit" class="trashButton"></button></form>'
                            var createElement = '<div class="grid-stack-item" ' + elementId + ' style="background-color: red; margin: 10px; border-radius: 10px;"><i style="position:absolute; top:3px; right: 4px" class="fab fa-youtube"></i><button id="editButton" class="editButton" onclick="editWidget(this.parentNode.id)"></button><div class="grid-stack-item-content" style="padding: 20px; text-align: center">' + button + first + iframe + '</div></div>'
                            this.grid.addWidget($(createElement), node.x, node.y, node.width, node.height, node.name)
                        }
                        //Get Video Views
                        function createYoutubeWidgetForView(videoId) {
                            var apiKey = 'AIzaSyDbB8TFiUCVdenG1rk8ObLdBQFkTIMwtBw'
                            var url = "https://www.googleapis.com/youtube/v3/videos?part=statistics&id=" + videoId + "&key=" + apiKey
                            fetch(url)
                            .then(function(resp) {
                                return resp.json()
                            })
                            .then(function(data) {
                                /*Get Data*/
                                var statistics = data.items[0].statistics
                                var first = '<h1><strong>' + videoId + '</strong></h1>'
                                var second = '<h2><i class="fas fa-eye"></i> ' + statistics.viewCount + '</h2>'
                                /*Create Widget*/
                                this.grid = $('.grid-stack').data('gridstack')
                                var node = {
                                    x: 3,
                                    y: 3,
                                    width: 4,
                                    height: 2,
                                }
                                var elementId = 'id="' + videoId + '"'
                                var valueID = 'value="' + videoId + '"'
                                var button = '<form action="/deleteWidget" method="POST"><input type="hidden" name="toRemove" ' + valueID + '></input><button type="submit" class="trashButton"></button></form>'
                                var createElement = '<div class="grid-stack-item" ' + elementId + ' style="background-color: red; margin: 10px; border-radius: 10px;"><i style="position:absolute; top:3px; right: 4px" class="fab fa-youtube"></i><button id="editButton" class="editButton" onclick="editWidget(this.parentNode.id)"></button><div class="grid-stack-item-content" style="padding: 20px; text-align: center">' + button + first + second + '</div></div>'
                                this.grid.addWidget($(createElement), node.x, node.y, node.width, node.height, node.name)
                            })
                        }
                        //Get Video Likes & Dislikes
                        function createYoutubeWidgetForLikesDislikes(videoId) {
                            var apiKey = 'AIzaSyDbB8TFiUCVdenG1rk8ObLdBQFkTIMwtBw'
                            var url = "https://www.googleapis.com/youtube/v3/videos?part=statistics&id=" + videoId + "&key=" + apiKey
                            fetch(url)
                            .then(function(resp) {
                                return resp.json()
                            })
                            .then(function(data) {
                                /*Get Data*/
                                var statistics = data.items[0].statistics
                                var likes = statistics.likeCount
                                var dislikes = statistics.dislikeCount
                                var first = '<h1><strong>' + videoId + '</strong></h1>'
                                var second = '<h2><i class="fas fa-thumbs-up"></i> ' + likes + '</h2>'
                                var secondBis = '<h2><i class="fas fa-thumbs-down"></i> ' + dislikes + '</h2>'
                                /*Create Widget*/
                                this.grid = $('.grid-stack').data('gridstack')
                                var node = {
                                    x: 3,
                                    y: 3,
                                    width: 4,
                                    height: 2,
                                }
                                var elementId = 'id="' + videoId + '"'
                                var valueID = 'value="' + videoId + '"'
                                var button = '<form action="/deleteWidget" method="POST"><input type="hidden" name="toRemove" ' + valueID + '></input><button type="submit" class="trashButton"></button></form>'
                                var createElement = '<div class="grid-stack-item" ' + elementId + ' style="background-color: red; margin: 10px; border-radius: 10px;"><i style="position:absolute; top:3px; right: 4px" class="fab fa-youtube"></i><button id="editButton" class="editButton" onclick="editWidget(this.parentNode.id)"></button><div class="grid-stack-item-content" style="padding: 20px; text-align: center">' + button + first + second + secondBis + '</div></div>'
                                this.grid.addWidget($(createElement), node.x, node.y, node.width, node.height, node.name)
                            })
                        }
                    </script>
                </div>
            </div>
            <!--Steam Division-->
        </div>
    </div>
</body>
</html>